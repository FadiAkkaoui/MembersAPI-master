@model MemberAdminUI.Models.Member

@{
    ViewData["Title"] = "DeleteMemberConfirm";
}
<h1>Är du säker att du vill radera?</h1>
<div class="d-flex justify-content-center">
    <div class="w-75 bg-light rounded p-3 shadow">
        <div>
            <img src="@Html.DisplayFor(model => model.ProfilePicture)" style="width:80px;height:80px; border-radius:50%;" alt="Deafult Profilbild">
        </div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                <a>Id</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                <a>Personnummer</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SocialSecurityNumber)
            </dd>
            <dt class="col-sm-2">
                <a>Förnamn</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                <a>Efternamn</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-2">
                <a>E-mail</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                <a>Telefonnummer</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-2">
                <a>Lösenord</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Password)
            </dd>
            <dt class="col-sm-2">
                <a>Startdatum</a>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StartDate)
            </dd>
            <dt class="col-sm-2">
                Slutdatum
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
            <dt class="col-sm-2">
                Medlamskapstyp
            </dt>
            <dd class="col-sm-10">
                @ViewBag.MembershipType
            </dd>
        </dl>
        <hr />
        <form asp-action="DeleteMember" method="post">
            <input type="hidden" value="@Model.Id" name="memberid" />
            <input type="submit" value="Radera" class="btn btn-danger" />
            <a class="btn btn-primary mt-1 mb-1" asp-action="Index">Tillbaka</a>
        </form>
    </div>
    </div>
