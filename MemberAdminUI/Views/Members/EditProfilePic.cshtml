@model MemberAdminUI.Models.ImgUpload

@{
    ViewData["Title"] = "EditProfilePic";
}

<h1 class="text-center" >Ändra profilbild för @ViewBag.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProfilePic" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Img" class="form-control-file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
                <a class="btn btn-primary mt-1 mb-1" asp-action="Index">Tillbaka</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
